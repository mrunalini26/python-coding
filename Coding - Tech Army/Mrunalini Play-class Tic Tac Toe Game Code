class Play:
    def __init__(self):
        self.players = [Player('Player 1', 'X'), Player('Player 2', 'O')]
        self.current_player = self.players[0]
        self.board = Board()
        
    def print_valid_entries(self):
        print('Valid entries are: 0-8')
        
    def printing_board(self):
        self.board.display_board()
        
    def change_turn(self):
        if self.current_player == self.players[0]:
            self.current_player = self.players[1]
        else:
            self.current_player = self.players[0]
            
    def won_game(self):
        if self.board.is_winner(self.current_player.symbol):
            return True
        else:
            return False
        
    def change_board(self, move):
        if self.board.is_valid_move(move):
            self.board.modify_board(move, self.current_player.symbol)
            return True
        else:
            return False
            
